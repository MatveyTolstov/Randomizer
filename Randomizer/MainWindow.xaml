<Window x:Class="Randomizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Randomizer"
        mc:Ignorable="d"
        Title="Randomizer" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Button x:Name="StartButton" Grid.Row="1" Content="Съебался" Margin="20" Width="400" Height="100" 
                HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="32" Click="Button_Click"
                />

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="LightGreen" Margin="20" CornerRadius="10">
                <TextBlock Text="Да" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="64" FontWeight="Bold"/>
            </Border>

            <Grid Grid.Column="1">
                <Viewbox>
                    <Grid Width="100" Height="100">
                       
                        <Image x:Name="ArrowImage" Source="/strelka.png" 
                   RenderTransformOrigin="0.5,0.5">
                            <Image.RenderTransform>
                                <RotateTransform x:Name="ArrowTransform" Angle="0"/>
                            </Image.RenderTransform>
                        </Image>
                    </Grid>
                </Viewbox>
            </Grid>

            <Border Grid.Column="2" Background="LightCoral" Margin="20" CornerRadius="10">
                <TextBlock Text="Нет" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="64" FontWeight="Bold"/>
            </Border>
        </Grid>
    </Grid>
</Window>